pipeline{
    environment {
        dockerImageName = "alexrumath/app" 
        dockerImage = ""
    }

    agent { 
        docker { 
            image 'node:lts' 
        } 
    }

    triggers {
        pollSCM '* * * * *'
    }

    stages {
        stage("Git clone"){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS-hw5"
            }
        }

        stage("Install dependencies"){
            steps {
                sh "cd ./app && npm install"
            }
        }

        // stage("Build and Push docker image to Hub"){
        //     environment {
        //         registryCred = "docker"
        //     }
        //     steps {
        //         script {
        //             docker.withRegistry('https://registry.hub.docker.com', registryCred){
        //                 dockerImage = docker.build(dockerImageName, "./app") 
        //                 dockerImage.push('latest')
        //             }
        //         }
        //     }
        // }

        stage("Deploy to DEV"){
            agent any

            steps{
                script{
                    sh "docker stop ${dockerImageName}-dev"
                    sh "docker build -t ${dockerImageName}-dev -f ./app/Dockerfile ./app"
                    sh "docker run -p 3000 ${dockerImageName}-dev"
                }
            }
        }


        stage("Testing"){
            steps {
                sh "cd ./app && npm test"
            }
        }

        stage("Deploy to PROM"){
            agent any

            steps{
                script{
                    sh "docker stop ${dockerImageName}-prom"
                    sh "docker build -t ${dockerImageName}-prom -f ./app/Dockerfile ./app"
                    sh "docker run -p 3001 ${dockerImageName}-prom"
                }
            }
        }        
    }
}