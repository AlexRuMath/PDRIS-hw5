pipeline{
    environment {
        dockerImageName = "alexrumath/app" 
        dockerImage = ""
    }

    agent { 
        docker { 
            image 'node:lts' 
        } 
    }

    triggers {
        pollSCM '* * * * *'
    }

    stages {
        stage("Git clone"){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS-hw5"
            }
        }

        stage("Install dependencies"){
            steps {
                sh "cd ./app && npm install"
            }
        }

        stage("Build image"){
            steps {
                sh "cd ./app && docker build -t ${dockerImageName} ."
            }
        }

        stage("Deploy to DEV"){
            agent any

            steps{
                script{
                    sh "cd ./ && deploy-dev.sh"
                }
            }
        }


        stage("Testing"){
            steps {
                sh "cd ./app && npm test"
            }
        }

        stage("Deploy to PROM"){
            agent any

            steps{
                script{
                    sh "cd ./ && deploy-prod.sh"
                }
            }
        }        
    }
}