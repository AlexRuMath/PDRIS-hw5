pipeline{
    environment {
        dockerImageName = "alexrumath/app" 
        dockerImage = ""
    }

    agent { 
        docker { 
            image 'node:lts' 
        } 
    }

    triggers {
        pollSCM '* * * * *'
    }

    stages {
        stage("Git clone"){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS-hw5"
            }
        }

        stage("Install dependencies"){
            steps {
                sh "cd ./app && npm install"
            }
        }

        stage("Build docker image"){
            steps {
                script {
                    sh "cd ./app"
                    env.dockerImage = docker.build dockerImageName
                }
            }
        }

        stage("Push docker image to Hub"){
            environment {
                registryCred = "docker"
            }
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', registryCred){
                        dockerImage.push('latest')
                    }
                }
            }
        }

        stage("Deploy to DEV"){
            steps{
                script{
                    kubernetesDeploy(config: "deployment-dev.yaml", kubeconfigId: "kubernetes")
                }
            }
        }


        stage("Testing"){
            steps {
                sh "cd ./app && npm test"
            }
        }

        stage("Deploy to PROM"){
            steps{
                script{
                    kubernetesDeploy(config: "deployment-prom.yaml", kubeconfigId: "kubernetes")
                }
            }
        }        
    }
}