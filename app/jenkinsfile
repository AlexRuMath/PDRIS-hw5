pipeline{
    environment {
        dockerImageName = "alexrumath/app" 
        dockerImage = ""
    }
    agent any

    triggers {
        pollSCM '* * * * *'
    }

    stages {
        stage("Git clone"){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS-hw5"
            }
        }

        stage("Install dependencies"){
            agent { 
                docker { 
                    image 'node:lts' 
                    } 
            }           
            steps {
                sh "cd ./app && npm install"
            }
        }

        stage("Build image"){
            steps {
                sh "cd ./app && docker build -t ${dockerImageName} ."
            }
        }

        stage("Deploy to DEV"){
            steps{
                script{
                    sh "cd ./app/app && deploy-dev.sh"
                }
            }
        }


        stage("Testing"){
            agent { 
                docker { 
                    image 'node:lts' 
                    } 
            }
            steps {
                sh "cd ./app && npm test"
            }
        }

        stage("Deploy to PROM"){
            steps{
                script{
                    sh "cd ./app"
                    sh "deploy-prod.sh"
                }
            }
        }        
    }
}