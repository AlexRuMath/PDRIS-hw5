pipeline{
    agent { 
        docker { 
            image 'node:lts' 
        } 
    }

    stages {
        stage("Git clone"){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS-hw5"
            }
        }

        stage("Install dependencies"){
            steps {
                
                sh "cd ./app && npm install"
            }
        }

        stage("Testing"){
            steps {
                sh "cd ./app && npm test"
            }
        }
    }
}