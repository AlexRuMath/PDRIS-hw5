pipeline{
    agent { 
        docker { 
            image 'node:lts' 
        } 
    }

    triggers {
        pollSCM '* * * * *'
    }

    environment {
        DOCKER_IMAGE_NAME = "alexrumath/app" 
        DOCKER_IMAGE = ""
    }

    stages {
        stage("Git clone"){
            steps {
                git url: "https://github.com/AlexRuMath/PDRIS-hw5"
            }
        }

        stage("Install dependencies"){
            steps {
                sh "cd ./app && npm install"
            }
        }

        stage("Build docker image"){
            steps {
                sh "cd ./app"
                DOCKER_IMAGE = docker.build DOCKER_IMAGE_NAME
            }
        }

        stage("Push docker image to Hub"){
            environment {
                registryCred = "docker"
            }
            steps {
                docker.withRegistry('https://registry.hub.docker.com', registryCred){
                    DOCKER_IMAGE.push('latest')
                }
            }
        }

        stage("Deploy to DEV"){
            steps{
                script{
                    kubernetesDeploy(config: "deployment-dev.yaml", kubeconfigId: "kubernetes")
                }
            }
        }


        stage("Testing"){
            steps {
                sh "cd ./app && npm test"
            }
        }

        stage("Deploy to PROM"){
            steps{
                script{
                    kubernetesDeploy(config: "deployment-prom.yaml", kubeconfigId: "kubernetes")
                }
            }
        }        
    }
}